<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    android:background="@android:color/background_dark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textCountryData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/covid_19_global_data"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/background_light" />

    <TableLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1,2,3"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp">
        <TableRow>
            <TextView
                android:id="@+id/titleCountryName"
                android:layout_column="1"
                android:fontFamily="sans-serif"
                android:text="@string/country"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleCountryCases"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/cases"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleCountryDeath"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/death"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleCountryRecovered"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/recover"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCountryData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_container"/>

    <ProgressBar
        android:id="@+id/loadingCountryData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"/>

</LinearLayout>