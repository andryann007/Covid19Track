<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.5dp"
    android:layout_marginHorizontal="15dp"
    android:background="@android:color/background_dark">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@android:color/background_light"
        app:cardCornerRadius="5dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/background_dark">

            <TextView
                android:id="@+id/tvContinentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/tv_continent_name"
                android:maxLines="2"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"/>

            <LinearLayout
                android:id="@+id/tvTitleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/titleContinentCases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_continent_totalcase"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/titleContinentRecovered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_continent_recoveredcase"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/titleContinentDeath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tv_continent_deathcase"
                    android:maxLines="1"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvValueContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView android:id="@+id/tvContinentCases"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/cases"
                    android:textColor="@android:color/background_light"
                    android:textSize="14sp"/>

                <TextView android:id="@+id/tvContinentRecovered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/recover"
                    android:textColor="#02FF0C"
                    android:textSize="14sp"/>

                <TextView android:id="@+id/tvContinentDeath"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/death"
                    android:textColor="#FF0000"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:id="@+id/horizontalDivider"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/background_light" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>