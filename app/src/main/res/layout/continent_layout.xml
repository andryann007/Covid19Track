<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textContinentData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/covid_19_continent_data"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:id="@+id/containerTotalCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTitleTotalCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/total_cases"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageLogoTotalCase"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_globe"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/textTitleTotalCase"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/logo_of_covid19" />

                <TextView
                    android:id="@+id/textValueTotalCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLogoTotalCase"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:id="@+id/containerContentActiveCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTitleActiveCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/total_active_case"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageLogoActiveCase"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_virus"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/textTitleActiveCase"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/logo_of_covid19" />

                <TextView
                    android:id="@+id/textValueActiveCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLogoActiveCase"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:id="@+id/containerDeath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTitleDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/total_death"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageLogoDeath"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_skull"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/textTitleDeath"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/logo_of_covid19" />

                <TextView
                    android:id="@+id/textValueDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLogoDeath"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/background_light"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="5dp">

            <RelativeLayout
                android:id="@+id/containerContentRecovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textTitleRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="@string/total_recovered"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageLogoRecovered"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_kit"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/textTitleRecovered"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/logo_of_covid19" />

                <TextView
                    android:id="@+id/textValueRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageLogoRecovered"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginVertical="10dp"
        android:background="@android:color/background_light" />

    <TableLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:stretchColumns="1,2,3"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp">
        <TableRow>
            <TextView
                android:id="@+id/titleContinentName"
                android:layout_column="1"
                android:fontFamily="sans-serif"
                android:text="@string/continent"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleContinentCases"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/cases"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleContinentDeath"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/death"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/titleContinentRecovered"
                android:layout_column="1"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="sans-serif"
                android:text="@string/recover"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContinentData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_container"/>

    <ProgressBar
        android:id="@+id/loadingContinentData"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"/>
</LinearLayout>